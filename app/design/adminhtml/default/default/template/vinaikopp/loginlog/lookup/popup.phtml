<?php /** @var VinaiKopp_LoginLog_Block_Adminhtml_LoginLog_Lookup $this */ ?>
<?php $_ip = $this->getIp() ?>
<?php if ($this->isValidIp($_ip)): ?>
    <h3 class="content-header"><?php echo $this->__('Lookup Results for IP Address %s', $_ip) ?></h3>
    <table>
    <?php foreach ($this->getLookupData() as $name => $value): ?>
        <tr>
            <th><?php echo $this->escapeHtml($this->__($name)) ?>:</th>
            <td><?php echo $this->escapeHtml($value) ?></td>
        </tr>
    <?php endforeach; ?>
    </table>
<?php else: ?>
    <h3 class="content-header"><?php echo $this->__('Invalid IP Address: %s', $_ip) ?></h3>
    <div>
        <p>
            <?php echo $this->__('This IP address can\'t be resolved.') ?>
        </p>
        <p>
            <?php echo $this->__('Turn off IP Address masking in the modules system configuration settings to enable lookups for future customer IP addresses.') ?>
        </p>
    </div>
<?php endif; ?> 